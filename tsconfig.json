{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src/",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/declarations",
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "target": "es2020",
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "plugins": []
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["build", "node_modules"]
}
